{
  "name": "@johsam-f/scry",
  "version": "0.1.0",
  "description": "Security-focused CLI that reveals hidden risks in JavaScript and Node.js codebases",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "scry": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "security",
    "cli",
    "analysis",
    "javascript",
    "nodejs",
    "linter",
    "vulnerability"
  ],
  "author": "Johsam-f",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Johsam-f/scry.git"
  },
  "scripts": {
    "build": "bun build src/cli/index.ts --outdir dist --format esm --target node && chmod +x dist/index.js",
    "prepublishOnly": "bun run build",
    "dev": "bun run src/cli/index.ts",
    "scan": "bun run src/cli/index.ts scan",
    "test": "bun test",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "ci": "npm run type-check && npm run lint && npm run format && npm run test && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/bun": "latest",
    "@types/node": "^25.0.10",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.54.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "glob": "^13.0.0",
    "ignore": "^7.0.5",
    "inquirer": "^13.2.1",
    "log-symbols": "^7.0.1",
    "marked": "^17.0.1",
    "marked-terminal": "^7.3.0",
    "ora": "^9.1.0",
    "table": "^6.9.0"
  }
}
